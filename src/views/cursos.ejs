<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>CRUD Notas</title>
    <link rel="stylesheet" href="https://bootswatch.com/5/darkly/bootstrap.min.css">
</head>
<body>
    <br><br>
    <nav>
        <a href="/" class="navbar-brand">Estudiantes</a>
        <a href="/materia" class="navbar-brand">Materias</a>
        <a href="/curso" class="navbar-brand">Cursos</a>
    </nav>

    <div class="container">
        <br>
        <H1>MODULO MATERIAS</H1>
        <div class="row mt-5 justify-content-between">
            <div class="col-md-8 align-self-center">
                <table class="table table-bordered table-hover">
                    <thead>
                        <th>ID</th>
                        <th>ID ESTUDIANTE</th>
                        <th>ID MATERIA</th>
                        <th>NOTA</th>
                        <th>ACTIONS</th>
                    </thead>
                    <tbody>
                        <% if(data){ %>
                            <% for (var i = 0; i< data.length; i++) {%>
                            <tr>
                                <td><%= data[i].id  %></td>
                                <td><%= data[i].id_estudiante  %></td>
                                <td><%= data[i].id_materia  %></td>
                                <td><%= data[i].nota  %></td>
                                <td>
                                    <a href="/curso/delete/<%= data[i].id%>" class="btn btn-danger">Eliminar</a>
                                    <a href="/curso/update/<%= data[i].id%>" class="btn btn-info">Editar Nota</a>
                                </td>
                            </tr>
                            <% } %>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-md-4 align-self-center">
                <div class="card">
                    <div class="card-body align-self-center">
                        <form action="/curso/add" method="post">
                            <div class="form-group">
                                <input type="number" name="id_estudiante" placeholder="id_estudiante" class="form=control">
                            </div><br>
                            <div class="form-group">
                                <input type="number" name="id_materia" placeholder="id_materia" class="form=control">
                            </div><br>
                            <div class="form-group">
                                <input type="number" name="nota" placeholder="nota" class="form=control">
                            </div><br>
                            <button type="submit" class="btn btn-primary">
                                Guardar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>